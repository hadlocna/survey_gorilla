<div class = "container">

<h1> THIS IS THE STATISTICS PAGE </h1>

<%survey = Survey.find(current_survey.id)%>
<% questions = survey.questions %>
<% count = 1 %>
<% questions.each do |question| %>
  <p> Question <%=count%>: <%=question.text%></p>
  <% choices = question.choices %>
  <% choices.each do |choice| %>
    <p> Choice <%= choice.text%>: <%= Response.where(choice_id: choice.id).count%></p>
  <%end%>
<%end%>

</div>
